<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.newbie.community.dao.BlogDao">
    <sql id="selectFields">
        id,user_id,title,content,tag_id,catgory_id,status,create_time
    </sql>
    <select id="selectById" resultType="Blog">
        select <include refid="selectFields"></include>
        from blog
        where id=#{id}
        and status!=1
    </select>
    <select id="selectAll" resultType="Blog">
        select <include refid="selectFields"></include>
        from blog
        where status!=1
        <if test="userId!=0">
            and user_id=#{userId}
        </if>
        limit #{offset},#{limit}
        order by create_time desc
    </select>
    <insert id="insert" parameterType="Blog" keyProperty="id">
        insert into blog(user_id,title,content,tag_id,catgory_id,status,create_time)
        values (#{userId},#{title},#{content},#{tagId},#{catgoryId},#{status},#{createTime})
    </insert>
    <update id="updateStatus">
        update tag
        set status=#{status}
        where id=#{id}
    </update>


</mapper>