<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.newbie.community.dao.UserDao">
    <sql id="selectFields">
        id,name,password,salt,email,header_url,type,status,create_time
    </sql>
    <select id="selectById" resultType="User">
        select
        <include refid="selectFields"></include>
        from user
        where id=#{id}
        and status!=1
    </select>
    <select id="selectByName" resultType="User">
        select
        <include refid="selectFields"></include>
         from user
         where name=#{name}
        and status!=1
    </select>
    <select id="selectByEmail" resultType="User">
        select
        <include refid="selectFields"></include>
        from user
        where email=#{email}
        and status!=1
    </select>
    <insert id="insert" parameterType="User" keyProperty="id">
    insert into user(name,password,salt,email,header_url,type,status,create_time)
    values (#{name},#{password},#{salt},#{email},#{headerUrl},#{type},#{status},#{createTime})
    </insert>
    <update id="updateStatus">
    update user
    set status=#{status}
    where id=#{id}
    </update>

    <delete id="deleteUserById">
        delete from user
        where id =#{id}
    </delete>

    <select id="isNullByName" resultType="int">
        select count(id)
        from user
        where name=#{name}
    </select>
</mapper>
